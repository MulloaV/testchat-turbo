<div class='container' >
    <div class='card'>
        <div class='card-header mb-3'>
            <h5><%= current_user.email %></h5>
        </div>
        <div class='card-body'>            
            <h3 class='card-title'>Users</h3>
            <%= turbo_stream_from 'users' %>
            <div id='users'>
                <%= render @users, class: 'mt-3 mb-3' %>
            </div>
            <h3 class='card-title'>Rooms</h3>
            <%= turbo_stream_from 'rooms' %>
            <div id='rooms'>
                 <%= render @rooms, class: 'mt-3 mb-3'%>
            </div>
            <%= render 'shared/new_room_form' %>
        </div>
    </div>        
</div>